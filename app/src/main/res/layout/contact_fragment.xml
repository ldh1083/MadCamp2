<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/border_search_contact"
                android:paddingLeft="5dp"
                android:paddingTop="7dp"
                android:paddingBottom="5dp"
                android:gravity="bottom">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/df_foreground"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/name_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:includeFontPadding="false"
                    android:gravity="bottom"
                    android:layout_gravity="center"
                    android:hint="Search">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="Local "
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="Server"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/border_graph"/>
            <ListView
                android:id="@+id/listview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#3C000000"
                android:dividerHeight="1dp"
                android:overScrollMode="never"
                android:padding="5dp"
                android:scrollbars="none">
            </ListView>
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/insertfab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            app:srcCompat="@android:drawable/stat_sys_download_done"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:borderWidth="0dp"
            android:layout_gravity="bottom|right"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/deletefab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            app:srcCompat="@android:drawable/stat_sys_upload_done"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:borderWidth="0dp"
            android:layout_gravity="bottom|right"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/mainFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            app:srcCompat="@android:drawable/sym_contact_card"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="bottom|right"
            app:borderWidth="0dp"/>
    </FrameLayout>
</FrameLayout>